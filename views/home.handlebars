<section class="index-poster">
</section>
<section id="home-section-1" class="movie-show-container">
	<h1>Movies Coming Out This Week</h1>
	<h3>Book a movie now</h3>

	<div class="movies-container">
		{{#each context}}
		<div class="movie-box">
			<img src="images/poster/{{img}}" alt="{{title}}" />
			<div class="movie-info">
				<h3>{{title}}</h3>
				<div class="movie-btn">
					<a style="display: block;" href="/movie-detail?id={{id}}"><i class="fas fa-eye"></i> View detail</a>
					<a style="display: block;" href="/booking?id={{id}}"><i class="fas fa-ticket-alt"></i> Book now</a>
				</div>
			</div>
		</div>
		{{/each}}

	</div>
</section>

<section id="home-section-1" class="movie-show-container" >
	<h3>News</h3>
	<div class="container-fluid">

		<div class="row">
			{{#each contextNews}}
				<div class="col col-12 col-sm-6 col-md-4 ">
					<a href="/news-detail?id={{id}}" class="news-info" >
						<div class="image-div" style=" flex:1" >

							<img src="images/news/{{img}}" style="object-fit: contain; width:100%; max-height:150px;  " alt="{{title}}">
						</div>
						<div class="news-infomation" style="margin-left: 10px; flex:2 ">

							<h4>{{title}}</h4>
							<i  class="fa-solid fa-calendar"></i><span>  {{day}}</span>
							<p style="color: #888;">{{content}}</p>
						</div>
					</a>
				</div>
			{{/each}}
			
			
		</div>
	</div>
</section>

<section id="home-section-1" class="movie-show-container" style="margin-bottom: 32px;">
	<h3 style="margin: 24px 0;">Promotion</h3>
	<div class="container-fluid">

		<div class="row">
			{{#each contextPromotion}}
			
				<div class="col col-12 col-sm-6 col-md-4 " style="margin-bottom: 20px;">
					<a href="/promotion-detail?id={{id}}" class="production-link" style="text-decoration: none; color:black">
						<div class="image-production" style="width:100%; margin-bottom:8px">

							<img class="img-production" src="images/promotion/{{img}}" style=" width:100%; max-height:270px " alt="{{title}}">
						</div>
						<h4>{{title}}</h4>
						Time for promotion: <i class="fa-solid fa-calendar" style="margin: 0 8px;"></i><span> {{day}}</span>
					</a>
				</div>
			{{/each}}
		</div>
	</div>
</section>