<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Admin</title>
    <link rel="icon" type="image/png" href="../img/logo.png">
    <link rel="stylesheet" href="/stylesheets/style2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
        integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    
        <div class="admin-section admin-section2">
            <div class="admin-section-column">
                <div class="admin-section-panel admin-section-panel4">
                    <div class="admin-panel-section-header">
                        <h2>List Room</h2>
                    </div>
                    <table class="text-center" cellpadding="10" cellspacing="10" border="1" style="width: 100%;">
                        <tr class="header">
                            <td>ID</td>
                            <td>Name</td>
                            <td>Map</td>
                            <td>Action</td>
                        </tr>
                        <tbody id="tbody">
                            {{#each context}}
                            <tr class="item">
                                <td>{{idphongchieu}}</td>
                                <td>{{name}}</td>
                                <td>{{idmap}}</td>
                                <td><button  class="btn btn-primary mr-3" onclick="handleModalEdit('{{idphongchieu}}','{{name}}','{{idmap}}')" data-toggle="modal" data-target="#edit-hall">Edit</a>
                                <button class="btn btn-danger" onclick="handleModalDel('{{idphongchieu}}','{{name}}')" data-toggle="modal" data-target="#delete-hall">Delete</button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="admin-section-column">
                <div class="admin-section-panel admin-section-panel2">
                    <div class="admin-panel-section-header">
                        <h2>Rooms</h2>
                    </div>
                    <form id="add-hall-form" method="post"  >
                        <label for="hallName">Name: </label>
                        <input id="hallNameAdd" placeholder="Name" type="text" name="name" >
                        <label for="hallChairs">Map: </label>
                        <input id="hallChairsAdd" placeholder="Map" type="number" name="idmap" >
                        <button type="submit" class="form-btn">Add Room</button>
                    </form>
                </div>
            </div>

            
        </div>

    <!-- Delete Confirm Modal -->
    <div id="delete-hall" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <hp class="modal-title">Delete room</hp>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                
                <div class="modal-body">
                    <p>Are you sure want to delete room: <strong class="hall-delete-name">Room</strong> ?</p>
                </div>
                <div class="modal-footer">
                     <form action="/admin/rooms/delete" method="post">
                        <input type="hidden" name="inputIdDel" id="inputIdDel">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button id="btn-del-hall" type="submit" class="btn btn-danger" >Delete</button>
                     </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Confirm Modal -->
    <div id="edit-hall" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <hp class="modal-title">Edit room infomation</hp>
                    <button type="button" class="close" data-dismiss="modal" >&times;</button>
                </div>
                <form method="post" action="/admin/rooms/edit" id="update-form" >
                    <input type="hidden" id="inputIdEdit" name="inputIdEdit">

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="employeeName">Name: </label>
                            <input class="form-control" id="employeeNameEdit" placeholder="Name" type="text" name="name" >
                        </div>
                        <div class="form-group">
                            <label for="employeePhone">Map: </label>
                            <input class="form-control"  id="employeePhoneEdit" placeholder="Phone" type="num" name="idmap" >
                        </div>
                        
                        <div class="form-group">
                            <button id="btn-edit-hall" type="submit" class="btn btn-primary px-5 mr-2">Edit now</button>
                        </div>
                    </div>
                </form>
            </div>  
        </div>
    </div>

    <script src="/javascripts/jquery-3.3.1.min.js "></script>
    <script src="/javascripts/owl.carousel.min.js "></script>
    <script src="/javascripts/script.js "></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    
    <script>
        function handleModalDel(id,name){
            console.log(id.name);
            $('.hall-delete-name').html(name);
            $('#inputIdDel').val(id);
        }    
        //sá»­a(update)
    function handleModalEdit(idphongchieu,name,idmap){
        $('#employeeNameEdit').val(name);
        $('#employeePhoneEdit').val(idmap);
        $('#inputIdEdit').val(idphongchieu);
        
    }
    </script>
</body>
</html>